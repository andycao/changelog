<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
 xmlns="http://java.sun.com/xml/ns/j2ee" 
xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_4.xsd" 
version="2.4">
  <display-name>Struts Blank</display-name>
  <welcome-file-list>
    <welcome-file>index.jsp</welcome-file>
  </welcome-file-list>
  <filter>
    <filter-name>securityFilter</filter-name>
    <filter-class>filters.urlSecurityFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>securityFilter</filter-name>
    <url-pattern>/welcome</url-pattern>
  </filter-mapping>
  <filter-mapping>
    <filter-name>securityFilter</filter-name>
    <url-pattern>/welcome.action</url-pattern>
  </filter-mapping>
  <filter-mapping>
    <filter-name>securityFilter</filter-name>
    <url-pattern>/show/* </url-pattern>
  </filter-mapping>
  <filter-mapping>
    <filter-name>securityFilter</filter-name>
    <url-pattern>/func/* </url-pattern>
  </filter-mapping>
  <filter>
    <filter-name>titleFilter</filter-name>
    <filter-class>filters.userTitleFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>titleFilter</filter-name>
    <url-pattern>/func/* </url-pattern>
  </filter-mapping>
  <filter>
    <filter-name>editTitleFilter</filter-name>
    <filter-class>filters.editTitleFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>editTitleFilter</filter-name>
    <url-pattern>/func/addProgram.jsp </url-pattern>
  </filter-mapping>
  <filter-mapping>
    <filter-name>editTitleFilter</filter-name>
    <url-pattern>/func/addProject.jsp </url-pattern>
  </filter-mapping>
  <filter-mapping>
    <filter-name>editTitleFilter</filter-name>
    <url-pattern>/func/addVersion.jsp </url-pattern>
  </filter-mapping>
  <filter-mapping>
    <filter-name>editTitleFilter</filter-name>
    <url-pattern>/func/editProject.jsp </url-pattern>
  </filter-mapping>
  <filter-mapping>
    <filter-name>editTitleFilter</filter-name>
    <url-pattern>/func/editProgram.jsp </url-pattern>
  </filter-mapping>
  <filter-mapping>
    <filter-name>editTitleFilter</filter-name>
    <url-pattern>/func/editVersion.jsp </url-pattern>
  </filter-mapping>
  <filter>
    <filter-name>struts2</filter-name>
    <filter-class>org.apache.struts2.dispatcher.FilterDispatcher</filter-class>
 	<!-- org.apache.struts2.dispatcher.FilterDispatcher -->
  </filter>
  <filter-mapping>
    <filter-name>struts2</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>
</web-app>