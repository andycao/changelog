<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC
	"-//Apache Software Foundation//DTD Struts Configuration 2.3//EN"
	"http://struts.apache.org/dtds/struts-2.3.dtd">
<struts>
<!-- actions about show -->
	<package name="show" namespace="/show" extends="struts-default">
		<action name="showAllProject" class="getAllProject" method="execute">
			<result name="success">/show/main/mainAllProject.jsp</result>
			<result name="error">/show/main/emptyRec.jsp</result>
		</action> 
		<action name="showAllProgram" class="getAllProgram" method="execute">
			<result name="success">/show/main/mainAllProgram.jsp</result>
			<result name="error">/show/main/emptyRec.jsp</result>
		</action>
		<action name="showAllVersion" class="getAllVersion" method="execute">
			<result name="success">/show/main/mainAllVersion.jsp</result>
			<result name="error">/show/main/emptyRec.jsp</result>
		</action>
		<action name="showMyChange" class="getUserChange" method="execute">
			<result name="success">/show/main/mainMyChange.jsp</result>
			<result name="error">/show/main/emptyRec.jsp</result>
			<result name="login">/login.jsp</result>
		</action>
		<action name="showRacentChange" class="getRacentChange" method="execute">
			<result name="success">/show/main/mainRacentChange.jsp</result>
			<result name="error">/show/main/emptyRec.jsp</result>
		</action>
	</package>
	
	<package name="individ" namespace="/show" extends="struts-default">
		<action name="getProject" class="projectActions" method="getProject">
    		<result name="success">/show/individ/project.jsp</result>
    		<result name="error">/show/individ/individ_error.jsp</result>
    	</action>
    	<action name="getProgram" class="programActions" method="getProgram">
    		<result name="success">/show/individ/program.jsp</result>
    		<result name="error">/show/individ/individ_error.jsp</result>
    	</action>
    	<action name="getVersion" class="versionActions" method="getVersion">
    		<result name="success">/show/individ/version.jsp</result>
    		<result name="error">/show/individ/individ_error.jsp</result>
    	</action>
    	<action name="getChange" class="changeActions" method="getChange">
    		<result name="success">/show/individ/change.jsp</result>
    		<result name="error">/show/individ/individ_error.jsp</result>
    	</action>
	</package>
	<!-- remove actions -->
	<package name="remove" namespace="/func" extends="struts-default">
		<action name="removeProject" class="projectActions" method="removeProject">
			<result name="success" type="redirect">/show/showAllProject</result>
			<result name="error">/func/delete_err.jsp</result>
		</action>
		<action name="removeProgram" class="programActions" method="removeProgram">
			<result name="success" type="redirect">/show/showAllProgram</result>
			<result name="error">/func/delete_err.jsp</result>
		</action>
		<action name="removeVersion" class="versionActions" method="removeVersion">
			<result name="success" type="redirect">/show/showAllVersion</result>
			<result name="error">/func/delete_err.jsp</result>
		</action>
		<action name="removeChange" class="changeActions" method="removeChange">
			<result name="success" type="redirect">/show/getVersion</result>
			<result name="error">/func/delete_err.jsp</result>
		</action>
		<action name="removeSelfChange" class="changeActions" method="removeSelfChange">
			<result name="success" type="redirect">/show/getVersion</result>
			<result name="error">/func/delete_err.jsp</result>
		</action>
		<action name="removeChangesByVID" class="versionActions" method="removeAllChanges">
			<result name="success" type="redirect">/show/getVersion</result>
			<result name="error">/func/delete_err.jsp</result>
		</action>
	</package>
</struts>